<h1 class="mt-3">Products</h1>


<% if current_user.become_to == 'seller' %>

<table class="table table-dark t-3">
  <thead>
    <tr>
      <th>Name product</th>
      <th>Description</th>
      <th>Price</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td><%= link_to product.name_product, product %></td></td>
      <td><%= product.description %></td>
      <td><%= product.price %></td>
      <td>
        <%= link_to 'Edit', edit_product_path(product) %>
        <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
    </tr>
    <% end %>
  </tbody>
</table>
  
<% end %>


